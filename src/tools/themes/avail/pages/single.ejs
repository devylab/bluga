<% const { data: content } = await service.content.getContentBySlug(params.slug); %>
<!--Divider-->
<% service.content.updateContentViews(params.slug); %>
<!--Divider-->
<%- await include('../components/navbar.ejs') %>
<div class="container-fluid">
  <div class="row fh5co-post-entry single-entry">
    <article
      class="col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-12 col-xs-offset-0"
    >
      <figure class="animate-box">
        <img src="<%= content.thumbnail %>" alt="Image" class="img-responsive" />
      </figure>
      <span class="fh5co-meta animate-box"><a href="single.html"><%= content.category.name %></a></span>
      <h2 class="fh5co-article-title animate-box"><a href="single.html"><%= content.title %></a></h2>
      <span class="fh5co-meta fh5co-date animate-box">
        <%= new Date(content.createdAt).toLocaleDateString("en-US", {month: "long",day: "numeric",year: "numeric"}) %>
      </span>

      <div
        class="col-lg-12 col-lg-offset-0 col-md-12 col-md-offset-0 col-sm-12 col-sm-offset-0 col-xs-12 col-xs-offset-0 content-article text-left"
      >
        <div class="row">
          <div class="col-md-12 animate-box"><%- content.content %></div>
        </div>
      </div>
    </article>
  </div>
</div>
<%- await include('../components/footer') %>
