<% 
  const templatePath = themePath();
  let styleLinks = "";
  const globalHeaders = Array.isArray(headers) ? headers : []
  globalHeaders?.forEach((header) => {
    if (header.includes('js')) styleLinks += `<script src="${templatePath}/${header}"></script>`
    else styleLinks += `<link type="text/css" rel="stylesheet" href="${templatePath}/${header}">`;
  })
%>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <title><%= meta.currentPageTitle %></title>
  <link rel="icon" type="image/x-icon" href="<%= appFavicon %>">
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta property="og:title" content="<%= meta.title %>" />
  <meta property="og:image" content="<%= meta.image %>" />
  <meta property="og:image:width" content="650" />
  <meta property="og:image:height" content="366" />
  <meta property="og:url" content="<%= meta.url %>" />
  <meta property="og:type" content="website" />
  <meta property="og:site_name" content="<%= meta.sitename %>" />
  <meta property="og:description" content="<%= meta.description %>" />
  <meta name="twitter:title" content="<%= meta.title %>" />
  <meta name="twitter:image" content="<%= meta.image %>" />
  <meta name="twitter:site" content="<%= meta.sitename %>" />
  <meta name="twitter:url" content="<%= meta.url %>" />
  <meta name="twitter:description" content="<%= meta.description %>" />
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="robots" content="index, follow, snippet, imageindex" />

  <!-- render head contents -->
  <%- styleLinks %>

</head>
