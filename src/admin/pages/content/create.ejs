<form class="content-header" x-data autocomplete="off">
  <div class="d-flex flex-column align-items-center justify-content">
    <p
      class="font-thin lowercase italic"
      x-show="$store.content.show"
      x-text="$store.content.message"
      x-transition
      x-effect="(() => {
      $store.content.show;
      setTimeout(() => $store.content.hideMessage(), 3000);
    })()"
    ></p>
    <input
      x-model="$store.content.title"
      id="contentTitle"
      type="text"
      name="contentTitle"
      placeholder="Content Title"
      class="content-input"
    />
  </div>
  <div id="editorjs"></div>
  <button class="content-save-btn" data-widget="control-sidebar" data-slide="true"><i class="fas fa-save"></i></button>
  <aside class="control-sidebar control-sidebar-light">
    <!-- Control sidebar content goes here -->
    <div class="p-3">
      <h5>Save Content</h5>
      <p>Sidebar content</p>
      <button
        type="button"
        @click.prevent="$store.content.saveContent(null, 'PUBLIC')"
        class="btn btn-block btn-outline-primary"
      >
        Publish
      </button>
      <button type="button" data-widget="control-sidebar" data-slide="true" class="btn btn-block btn-outline-danger">
        Close
      </button>
    </div>
  </aside>
</form>
