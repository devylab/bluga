<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1>Upload Theme</h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="/admin">Home</a></li>
          <li class="breadcrumb-item"><a href="/admin/themes">Themes</a></li>
          <li class="breadcrumb-item active">Upload Theme</li>
        </ol>
      </div>
    </div>
  </div>
  <!-- /.container-fluid -->
</section>

<!-- Main content -->
<% const notification = await session('theme'); %>

<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <form action="<%= appLink %>api/theme/upload" method="post" enctype="multipart/form-data">
          <div class="form-group">
            <label for="uploadTheme" class="d-block">Upload Theme</label>
            <input class="d-block" name="uploadTheme" id="uploadTheme" type="file" />
          </div>
          <button type="submit" class="btn btn-primary">Upload</button>
        </form>

        <% if (notification) { %>
        <!-- if notification is error-->
        <% if (notification?.type === 'error') { %>
        <p class="text-danger mt-3"><%= notification?.message %></p>
        <% } else if (notification?.type === 'success') { %>
        <p class="text-success mt-3"><%= notification?.message %></p>
        <% } %> <% } %>
      </div>
    </div>
  </div>
</section>
<!-- /.content -->
