{
  "name": "bluga",
  "version": "1.0.0",
  "description": "A blogging platform",
  "main": "index.js",
  "repository": "https://github.com/devylab/bluga.git",
  "author": "Cavdy <cavdyofficials@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf build && yarn find-deadcode",
    "prestart": "yarn migrate:prod",
    "minify-copy": "yarn grunt && yarn grunt:copy",
    "build": "tsc && yarn minify-copy",
    "generate": "npx prisma generate",
    "dev": "ts-node-dev -r tsconfig-paths/register --files src/index.ts",
    "find-deadcode": "ts-prune",
    "start": "node -r tsconfig-paths/register build/index.js",
    "migrate:dev": "prisma migrate dev --name",
    "migrate:prod": "prisma migrate deploy && prisma db seed",
    "grunt": "grunt",
    "grunt:watch": "grunt watch --force",
    "grunt:copy": "grunt copy",
    "prettier": "prettier --write \"**/*.{ts,tsx}\""
  },
  "devDependencies": {
    "@types/ejs": "^3.1.1",
    "@types/html-minifier": "^4.0.2",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.11.9",
    "@types/sanitize-html": "^2.6.2",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "autoprefixer": "^10.4.13",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "grunt": "^1.5.3",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-uglify": "^5.2.2",
    "grunt-contrib-watch": "^1.1.0",
    "prettier": "^2.7.1",
    "prisma": "^4.11.0",
    "rimraf": "^3.0.2",
    "ts-node-dev": "^2.0.0",
    "ts-prune": "^0.10.3",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "@fastify/compress": "^6.1.1",
    "@fastify/cookie": "^8.3.0",
    "@fastify/csrf-protection": "^6.2.0",
    "@fastify/formbody": "^7.3.0",
    "@fastify/helmet": "^10.0.2",
    "@fastify/multipart": "^7.5.0",
    "@fastify/rate-limit": "^7.5.0",
    "@fastify/static": "^6.5.0",
    "@fastify/view": "^7.1.2",
    "@prisma/client": "^4.11.0",
    "argon2": "^0.30.2",
    "dotenv": "^16.0.3",
    "editorjs-html": "^3.4.2",
    "ejs": "^3.1.9",
    "envalid": "^7.3.1",
    "fastify": "^4.10.0",
    "html-minifier": "^4.0.0",
    "jsonwebtoken": "^9.0.0",
    "nanoid": "3.3.4",
    "node-cache": "^5.1.2",
    "rxjs": "^7.5.7",
    "sanitize-html": "^2.7.3",
    "striptags": "^3.2.0",
    "tsconfig-paths": "^4.1.1"
  },
  "prisma": {
    "seed": "ts-node prisma/seed/index.ts"
  }
}
